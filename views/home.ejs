<%- include('partials/header') %>

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var myCarousel = new bootstrap.Carousel(document.getElementById('newsCarousel'), {
                interval: 5000 // İsteğe bağlı: slayt geçiş hızı (ms cinsinden)
            });
        });
    </script>

    <style>
        .carousel-item .card {
            height: 100%;
        }

        /* Move carousel control buttons below the carousel */
        .carousel {
            margin-bottom: 2rem;
        }

        .carousel-control {
            position: static; /* Remove absolute positioning */
            margin-bottom: 0.5rem; /* Add some spacing from the carousel */
            background-color: black; /* Set background color to black */
            color: white; /* Set text color to white */
            border: none; /* Remove border */
            padding: 0.5rem 1rem; /* Add some padding */
            border-radius: 0; /* Remove border radius */
            font-size: 1rem; /* Set font size */
        }

        .carousel-control-prev {
            left: 0;
        }

        .carousel-control-next {
            right: 0;
        }
    </style>

</head>

<header class="masthead" style="background-image: url('https://images.unsplash.com/photo-1593672715438-d88a70629abe?q=80&w=1974&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D')">
    <div class="container position-relative px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7">
                <div class="site-heading">
                    <h1>Money Dergisi</h1>
                    <span class="subheading">Paraya Dair Her Şey</span>
                </div>
            </div>
        </div>
    </div>
</header>

<div class="container px-4 px-lg-5">
    <div id="newsCarousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <% for (let i = 0; i < news.length; i += 2) { %>
                <div class="carousel-item <%= i === 0 ? 'active' : '' %>">
                    <div class="row gx-4 gx-lg-5 justify-content-center">
                        <% for (let j = i; j < i + 2 && j < news.length; j++) { %>
                            <div class="col-md-6 mb-4">
                                <div class="card h-100">
                                    <img src="<%= news[j].image %>" class="card-img-top" alt="Haber Resmi">
                                    <div class="card-body">
                                        <h3 class="card-title">
                                            <a href="/news/<%= news[j]._id %>"><%= news[j].title %></a>
                                        </h3>
                                        <p class="card-text"><%= news[j].content %></p>
                                    </div>
                                </div>
                            </div>
                        <% } %>
                    </div>
                </div>
            <% } %>
        </div>
    </div>
    <div class="d-flex justify-content-between mt-3">
        <button class="carousel-control-prev" type="button" data-bs-target="#newsCarousel" data-bs-slide="prev">Geri</button>
        <button class="carousel-control-next" type="button" data-bs-target="#newsCarousel" data-bs-slide="next">İleri</button>
    </div>
</div>
